<h1>Predictions</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Pundit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @predictions.each do |prediction| %>
      <tr>
        <td><%= link_to prediction.content, prediction %></td>
        <td><%= link_to prediction.pundit.name, prediction.pundit %></td>
      </tr>
    <% end %>
  </tbody>
</table>

